<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <cn.bingoogolapple.titlebar.BGATitleBar
        android:id="@+id/titlebar"
        style="@style/TitleBar"
        app:bgatitlebar_leftDrawable="@drawable/ic_arrow_back"
        app:bgatitlebar_titleDrawablePadding="3dp"
        app:bgatitlebar_titleText="个人资料" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.allen.library.SuperTextView
            android:id="@+id/settingIv1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:sDividerLineType="both"
            app:sLeftTextColor="@color/titleblack"
            app:sLeftTextString="允许别人查看我的真实姓名"
            app:sRightViewType="switchBtn"
            app:sSwitchIsChecked="true"
            app:sThumbResource="@drawable/thumb"
            app:sTrackResource="@drawable/track" />

        <com.allen.library.SuperTextView
            android:id="@+id/settingIv2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:sDividerLineType="both"
            app:sLeftTextColor="@color/titleblack"
            app:sLeftTextString="允许别人查看我的手机"
            app:sRightViewType="switchBtn"
            app:sSwitchIsChecked="true"
            app:sThumbResource="@drawable/thumb"
            app:sTrackResource="@drawable/track" />

        <com.allen.library.SuperTextView
            android:id="@+id/settingIv3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:sDividerLineType="both"
            app:sLeftTextColor="@color/titleblack"
            app:sLeftTextString="允许别人查看我的出生年月"
            app:sRightViewType="switchBtn"
            app:sSwitchIsChecked="true"
            app:sThumbResource="@drawable/thumb"
            app:sTrackResource="@drawable/track" />
    </LinearLayout>
</LinearLayout>