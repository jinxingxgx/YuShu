<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/headLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_head">

        <ImageView
            android:id="@+id/settingIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/text_margin"
            android:src="@mipmap/icon_setting"></ImageView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/headIconIv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />


        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headIconIv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="请登录"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"></TextView>

        <TextView
            android:id="@+id/contentTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameTv"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"></TextView>


    </RelativeLayout>

    <TextView
        android:id="@+id/roomTv"
        style="@style/maintextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-15dp"
        android:background="@drawable/bg_text_me"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/text_margin"
        android:paddingRight="@dimen/text_margin"
        android:paddingTop="5dp"
        android:text="29栋705"
        android:textSize="@dimen/sp_14"></TextView>

    <LinearLayout
        android:id="@+id/midLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/exitBtn"
        android:layout_below="@+id/headLayout"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/mySendTv"
                    style="@style/maintextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableTop="@mipmap/icon_fabu"
                    android:gravity="center"
                    android:text="我发布的"
                    android:textSize="@dimen/sp_14"></TextView>

                <TextView
                    android:id="@+id/sendNumTv"
                    style="@style/maintextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="2"
                    android:visibility="gone"></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/myShouCangLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/myShouCangTv"
                    style="@style/maintextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableTop="@mipmap/icon_soucang"
                    android:gravity="center"
                    android:text="我收藏的"
                    android:textSize="@dimen/sp_14"></TextView>

                <TextView
                    android:id="@+id/souCangNumTv"
                    style="@style/maintextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="2"
                    android:visibility="gone"></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/myPinLunLayout"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/myPinLunTv"
                    style="@style/maintextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableTop="@mipmap/icon_pinglun"
                    android:gravity="center"
                    android:text="我评论的"
                    android:textSize="@dimen/sp_14"></TextView>

                <TextView
                    android:id="@+id/pinlunNumTv"
                    style="@style/maintextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="2"
                    android:visibility="gone"></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/myDianZanLayout"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/myDianZanTv"
                    style="@style/maintextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableTop="@mipmap/icon_dianzan"
                    android:gravity="center"
                    android:text="我点赞的"
                    android:textSize="@dimen/sp_14"></TextView>

                <TextView
                    android:id="@+id/dianZanTv"
                    style="@style/maintextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="2"
                    android:visibility="gone"></TextView>
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/main_bg"></View>

        <com.allen.library.SuperTextView
            android:id="@+id/callKefuBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            stv:sDividerLineType="both"
            stv:sLeftIconRes="@mipmap/icon_kefu"
            stv:sLeftTextString="联系客服"
            stv:sRightIconRes="@drawable/next_item" />

        <com.allen.library.SuperTextView
            android:id="@+id/yijianBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            stv:sLeftIconRes="@mipmap/icon_yijian"
            stv:sLeftTextString="提出意见"
            stv:sRightIconRes="@drawable/next_item" />

        <com.allen.library.SuperTextView
            android:id="@+id/aboutBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            stv:sLeftIconRes="@mipmap/icon_about"
            stv:sLeftTextString="关于御墅社区"
            stv:sRightIconRes="@drawable/next_item" />

        <com.allen.library.SuperTextView
            android:id="@+id/haopinBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            stv:sDividerLineType="bottom"
            stv:sLeftIconRes="@mipmap/icon_haopin"
            stv:sLeftTextString="给个好评吧"
            stv:sRightIconRes="@drawable/next_item" />

    </LinearLayout>

    <Button
        android:id="@+id/exitBtn"
        style="@style/BtnRedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/text_margin"
        android:text="退出登录"
        android:visibility="gone"></Button>
</RelativeLayout>